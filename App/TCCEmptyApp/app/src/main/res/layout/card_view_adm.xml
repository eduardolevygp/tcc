<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/card_adm_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/card_adm_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/placeholder_avatar_image"
            android:contentDescription="@string/card_adm_placeholder"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/card_adm_name"
                style="@style/TextElement.Header.H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joao da Silva Rodrigues Cardoso" />

            <TextView
                android:id="@+id/card_adm_role"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Presidente" />

            <TextView
                android:id="@+id/card_adm_email"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="joao_silva@gmail2.com" />

            <TextView
                android:id="@+id/card_adm_phone"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11) 99999-9999" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>