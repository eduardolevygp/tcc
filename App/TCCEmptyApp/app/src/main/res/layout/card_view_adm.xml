<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/card_adm_image"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_avatar_image" />

        <TextView
            android:id="@+id/card_adm_name"
            style="@style/TextElement.Header.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joao da Silva" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/card_adm_role"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presidente" />

            <TextView
                android:id="@+id/card_adm_email"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="joao_silva@gmail2.com" />

            <TextView
                android:id="@+id/card_adm_phone"
                style="@style/TextElement.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11) 99999-9999" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>