<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLayout"
    android:gravity="center_horizontal" >

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/placeholder_no_connection"
        android:contentDescription="@string/placeholder_image_description" />

    <TextView
        style="@style/TextElement.Paragraph"
        android:text="@string/placeholder_text"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/placeholder_button"
        style="@style/Button"
        android:layout_marginTop="15dp"
        android:text="@string/placeholder_button_text" />

</LinearLayout>