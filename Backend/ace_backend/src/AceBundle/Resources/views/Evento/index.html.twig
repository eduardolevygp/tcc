{%  extends '@Ace/base.html.twig' %}

{%  block body %}

        <h1>{{ eventos_label }}</h1>
        <a href="{{ path("evento_novo") }}"><button class="btn btn-primary pull-right">Adicionar evento</button></a>
        {% if eventos is empty %}
            Nenhum evento cadastrado
        {% else %}

            <table class="table table-striped table-vertical-middle">
                <thead>
                <th>Título</th>
                <th>Data</th>
                <th>Hora</th>
                <th>Local</th>
                <th>Descrição</th>
                <th>Imagem</th>
                <th>Ações</th>
                </thead>
                <tbody>
                {% for evento in eventos %}
                    <tr>
                        <td>{{ evento.title }}</td>
                        <td>{{ evento.date | date('d/m/Y') }}</td>
                        <td>{{ evento.time | date('H:i') }}</td>
                        <td>{{ evento.location }}</td>
                        <td>{{ evento.description | truncate(100)}}</td>
                        <td>
                            <img src="{{ asset('images/eventos/'~(evento.image ?: 'default.jpg')) }}" class="foto-120" alt="{{ evento.title }}">
                        </td>
                        <td>
                            <a title="Editar" href="{{ path('evento_editar', {'id': evento.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                            <form style="display: inline;" action="{{ path('evento_delete', {'id': evento.id}) }}" method="POST">
                                <button class="transparent-btn ml10" onclick="return confirm('Você tem certeza que deseja excluir {{ evento.title }}?')" type="submit">
                                    <i title="Excluir" class="glyphicon glyphicon-remove text-danger"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        {% endif %}


{%  endblock %}